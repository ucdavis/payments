
@{
    ViewData["Title"] = "Jobs Status";
}

@section AdditionalStyles
{
    <style>
        .job img.card-img-top {
            max-height: 180px;
            object-fit: cover;
        }
    </style>
}

<h2>Jobs</h2>

<div class="row">
    <div class="col-lg-4">
        <div class="card job">
            <img class="card-img-top" src="~/media/abstract-art-artistic-251287.jpg" alt="zoom in of the eye on the dollar">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-action="MoneyMovement">Money Movement Job</a>
                </h5>
                <p class="card-text">
                    Reviews all paid invoices and queries their status with KFS
                </p>
            </div>
        </div>
    </div>
</div>