@model Payments.Mvc.Models.JobViewModels.TaxReportViewModel
@{
    ViewData["Title"] = "Tax Report Jobs";
}

@section AdditionalStyles
{
    <link rel="stylesheet" href="~/css/calendar.css" />
}

<div class="card-style">
    <div class="card-header-yellow card-bot-border">
        <div class="card-head">
            <div class="row mb-2">
                <div class="col-8">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-end">
                    <button class="btn" data-toggle="modal" data-target="#run-job-modal">Run Job</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-content">
        <div class="d-flex justify-content-between mb-4">
            <div>
                <a class="btn" asp-action="TaxReport" asp-route-year="@(Model.Year - 1)">
                    <i class="fas fa-angle-left"></i> @(Model.Year - 1)
                </a>
            </div>
            <div>
                <h2>@Model.Year</h2>
            </div>
            <div>
                <a class="btn" asp-action="TaxReport" asp-route-year="@(Model.Year + 1)">
                    @(Model.Year + 1) <i class="fas fa-angle-right"></i>
                </a>
            </div>
        </div>
        <div id="jobsCalendar"></div>
    </div>
</div>

<div id="run-job-modal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Run Tax Report Job?</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <form id="run-job-modal-form" method="post" action="@Url.Action("TaxReportRun")">
                    @Html.AntiForgeryToken()
                </form>
                <button type="button" class="btn-inverse" data-dismiss="modal">Cancel</button>
                <button type="button" id="run-job-modal-action" class="btn">Run Job</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdn.jsdelivr.net/npm/underscore@1.9.1/underscore-min.js"></script>
    <script src="~/js/calendar.js"></script>
    <script>
        $('#jobsCalendar').calendar({
            tmpl_path: "/calendar/",
            events_source: '@Url.Action("TaxReportRecords")',
            view: 'year',
            views: {
                month: {
                    enable: 0
                },
                week: {
                    enable: 0
                },
                day: {
                    enable: 0
                }
            }
        });

        $('#run-job-modal-action').click(function() {
            $('#run-job-modal-form').submit();
        });
    </script>
}
