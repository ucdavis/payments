@model Payments.Mvc.Models.TeamViewModels.TeamDetailsModel

@{
    ViewData["Title"] = "Team Details";
}

<div class="card">
    <div class="card-header card-header-primary d-flex justify-content-between align-items-start">
        <h1>@ViewBag.Title</h1>

        @if (Model.UserCanEdit)
        {
            <a asp-action="Edit" class="btn"><i class="far fa-edit me-3"></i>Edit Team</a>
        }
    </div>

    <div class="card-body">
        <div class="row">
            <dl class="dl-horizontal col-lg">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Slug)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Slug)
                </dd>
                @if (Model.UserCanEdit) // equivalent of isUserAdmin
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.ApiKey)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ApiKey)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.WebHookApiKey)
                    </dt>
                    <dd>
                        @if (!string.IsNullOrWhiteSpace(Model.WebHookApiKey))
                        {
                            @Html.DisplayFor(model => model.WebHookApiKey)
                        }
                        else
                        {
                            <span class="text-muted">Not Set</span>
                        }
                    </dd>
                }
            </dl>
            <dl class="dl-horizontal col-lg">
                <dt>
                    @Html.DisplayNameFor(model => model.ContactName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContactName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContactEmail)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContactPhoneNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContactPhoneNumber)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AllowedInvoiceType)
                </dt>
                <dd>
                    @{
                        string displayText = "";
                        string badgeClass = "";

                        switch (Model.AllowedInvoiceType)
                        {
                            case "CC":
                                displayText = "Credit Card Only";
                                badgeClass = "badge bg-primary";
                                break;
                            case "Recharge":
                                displayText = "Recharge Only";
                                badgeClass = "badge bg-success";
                                break;
                            case "Both":
                                displayText = "Both Credit Card and Recharge";
                                badgeClass = "badge bg-info";
                                break;
                            default:
                                displayText = Model.AllowedInvoiceType;
                                badgeClass = "badge bg-secondary";
                                break;
                        }
                    }
                    <span class="@badgeClass">@displayText</span>
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="row justify-content-between">

    <div class="col-sm-12 col-md-6">
        <a asp-controller="FinancialAccounts" asp-action="Index" class="card card-dashboard-button min-height-card">
            <img src="/media/statistics.svg" alt="statistics icon">
            <div>
                <h2 class="secondary-font">Accounts</h2>
                <span class="tertiary-font">Edit Financial Accounts for Team</span>
            </div>
        </a>
    </div>


    <div class="col-sm-12 col-md-6">
        <a asp-action="Roles" class="card card-dashboard-button min-height-card">
            <img src="/media/support.svg" alt="support icon">
            <div>
                <h2 class="secondary-font">Users</h2>
                <span class="tertiary-font">Edit Users and Roles for Team</span>
            </div>
        </a>
    </div>

    <div class="col-sm-12 col-md-6">
        <a asp-action="WebHooks" class="card card-dashboard-button min-height-card">
            <img src="/media/webhook.svg" alt="webhook icon">
            <div>
                <h2 class="primary-font">Web Hooks</h2>
                <span class="tertiary-font">Edit Web Hooks for Team</span>
            </div>
        </a>
    </div>

</div>

<div>
    <a asp-controller="Teams" asp-action="Index"><i class="fas fa-chevron-left me-3"></i>Back to List of Teams</a>
</div>