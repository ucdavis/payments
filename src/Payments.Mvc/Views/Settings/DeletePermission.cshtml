@model TeamPermission
@{
    ViewData["Title"] = "Delete User Permission";
}

<div class="card-style">
    <div class="card-header-primary card-bot-border">
        <div class="card-head d-flex justify-content-between align-items-start">
            <h2>@ViewBag.Title</h2>
            <a asp-action="Roles" class="btn-link">Back</a>
        </div>
    </div>

    <div class="card-content">
        <h3>Are you sure you want to delete this user's permission?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Team)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Team.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.Name) <span> (@Html.DisplayFor(model => model.User.Email))</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Role.Name)
                </dd>
            </dl>

            <form asp-action="DeletePermission">
                <input type="submit" value="Confirm Delete" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Roles" class="btn-link"><i class="fa fa-fw fa-chevron-left"></i> Back to Roles</a>
</div>
