@model TeamPermission
@{
    ViewData["Title"] = "Delete User Permission";
}

<div class="card">
    <div class="card-header card-header-primary d-flex justify-content-between align-items-start">
        <h1>@ViewBag.Title</h1>
        <a asp-action="Roles">Back</a>
    </div>

    <div class="card-body">
        <h3>Are you sure you want to delete this user's permission?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Team)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Team.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.Name) <span> (@Html.DisplayFor(model => model.User.Email))</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Role.Name)
                </dd>
            </dl>

            <form asp-action="DeletePermission">
                <input type="submit" value="Confirm Delete" class="btn" />
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Roles"><i class="fas fa-chevron-left mr-3"></i> Back to Roles</a>
</div>
