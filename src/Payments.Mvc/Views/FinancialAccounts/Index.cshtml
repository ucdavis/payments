@using System.Security.Claims
@using Payments.Mvc.Models.Roles
@model Team

@{
    ViewData["Title"] = "Accounts";
}
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>
</dl>

<h2>Accounts</h2>

<div>


    <p>
        <a asp-action="CreateAccount" asp-controller="FinancialAccounts">Create New Account</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Chart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Account)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Object)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.SubAccount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.SubObject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.Project)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.IsDefault)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultAccount.IsActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Accounts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Object)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubObject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDefault)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>

                    <td>
                        <a asp-action="EditAccount" asp-controller="FinancialAccounts" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="AccountDetails" asp-controller="FinancialAccounts" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="DeleteAccount" asp-controller="FinancialAccounts" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 
</div>


@section AdditionalStyles
    {
    @{ await Html.RenderPartialAsync("_DataTableStylePartial"); }
}

@section scripts
    {
    @{ await Html.RenderPartialAsync("_DataTableScriptsPartial"); }

    <script type="text/javascript">
        $(function() {
            $(".table").DataTable({
                columnDefs: [
                    {
                        targets: [-1], orderable: false
                    },
                    {
                        targets: [-1], searchable: false
                    }
                ]
            });
        });
    </script>
}
