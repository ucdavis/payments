@model IList<Team>
@{
    ViewData["Title"] = "Index";
}

<h2>Your Teams:</h2>

<div class="d-flex flex-column align-items-start justify-content-center">
    @foreach (var team in Model)
    {
    <a asp-controller="Home" asp-action="TeamIndex" asp-route-team="@team.Slug">
        <td>@team.Name</td>
    </a>
    }
</div>