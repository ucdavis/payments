@model Payments.Mvc.Models.PaymentViewModels.BaseInvoiceViewModel

@{
    var id = !string.IsNullOrWhiteSpace(Model.Id) ? Model.Id : "0000-DRAFT";
}

<div class="pay-top">
    <h1>Invoice from @Model.Team.Name</h1><br />
    <span class="pay-top-customer">Billed to @Model.CustomerEmail</span><br />
    <span class="pay-top-invoice-info">Invoice #@id</span>
</div>
