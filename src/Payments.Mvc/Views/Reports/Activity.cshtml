@using Payments.Core.Extensions
@using Payments.Core.Models.History

@model Payments.Mvc.Models.InvoiceViewModels.InvoiceListViewModel
@{
    ViewBag.Title = "Credit Card Activity Report";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h1><i class="fas fa-credit-card" title="Credit Card"></i> @ViewBag.Title</h1>


    </div>
    <div class="card-body card-bot-border">

        @if (Model.Year.HasValue)
        {
            <div>Shows all invoices created in @Model.Year. Export to excel to view additional columns.</div>
        }
        else
        {
            <div>Shows all invoices created in the last 12 months (since @DateTime.Now.AddMonths(-12).ToString("d")). Export
                to excel to view additional columns.</div>
        }
        <form asp-action="Activity" method="post">
            <div class="row align-items-end">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="form-group col-12 mt-4">
                            <label>Filter for Year</label>
                            <div class="input-group">
                                <input class="form-control" type="text" placeholder="YYYY" asp-for="Year"
                                    asp-format="{0:yyyy}" />
                            </div>
                        </div>
                        <div class="form-group col-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"><i
                                        class="fas fa-sync-alt fa-sm"></i>Refresh Report</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="mt-2">
            <button id="toggleColumns" class="btn btn-secondary"><i class="fas fa-columns"></i> <span
                    id="toggleText">Show All Columns</span></button>
        </div>
    </div>
    <div class="card-body table-responsive">
        <table id="Invoices" class="table">
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Status</th>
                    <th>Customer Email</th>
                    <th>Customer Name</th>
                    <th>Customer Company</th>
                    <th>Amount</th>
                    <th>Account Name</th>
                    <th>KFS Account</th>
                    <th>AE Account</th>
                    <th>Sent At</th>
                    <th>Created</th>
                    <th>Due Date</th>
                    <th>Paid Date</th>
                    <th>Created By</th>
                    <th>Sent By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model.Invoices)
                {
                    <tr>
                        <td>@invoice.GetFormattedId()</td>
                        <td>@invoice.Status</td>
                        <td>@invoice.CustomerEmail</td>
                        <td>@invoice.CustomerName</td>
                        <td>@invoice.CustomerCompany</td>
                        <td>@invoice.CalculatedTotal</td>
                        <td>@invoice.Account.Name</td>
                        <td>@invoice.Account.GetAccountString()</td>
                        <td>@invoice.Account.FinancialSegmentString</td>
                        <td>@(invoice.SentAt.HasValue? invoice.SentAt.Value.ToPacificTime().ToString("d") : "")</td>
                        <td>@invoice.CreatedAt.ToPacificTime().ToString("d")</td>
                        <td>@(invoice.DueDate.HasValue? invoice.DueDate.Value.ToPacificTime().ToString("d") : "")</td>
                        <td>@invoice.History?.FirstOrDefault(a => a.Type ==
                                                    HistoryActionTypes.PaymentCompleted.TypeCode)?.ActionDateTime.ToPacificTime().ToString("d")</td>
                    <td>
                        @invoice.History?.FirstOrDefault(a => a.Type == HistoryActionTypes.InvoiceCreated.TypeCode)?.Actor
                    </td>
                    <td>@invoice.History?.FirstOrDefault(a => a.Type == HistoryActionTypes.InvoiceSent.TypeCode)?.Actor</td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" asp-add-nonce="true">
        $(function () {
            // setup table
            var table =  $("#Invoices").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel'
                ],
                order: [[9, 'desc']],
                columnDefs: [
                    { targets: [3, 4, 7, 8, 12, 13, 14], visible: false },
                    { targets: [9, 10, 11, 12], type: 'date' },
                ],
                autoWidth: false,
            });

            // toggle column visibility
            var hiddenColumns = [3, 4, 7, 8, 12, 13, 14];
            var allColumnsVisible = false;
            $('#toggleColumns').on('click', function (e) {
                e.preventDefault();
                allColumnsVisible = !allColumnsVisible;
                hiddenColumns.forEach(function (colIdx) {
                    var column = table.column(colIdx);
                    column.visible(allColumnsVisible);
                });
                // Force recalculation of column widths
                table.columns.adjust();
                $(window).trigger('resize');

                $('#toggleText').text(allColumnsVisible ? 'Hide Columns' : 'Show All Columns');
            });
            // setup datepickers
            $('#Year').datepicker({
                keepEmptyValues: true,
                format: "yyyy",
                startView: "years",
                minViewMode: "years",
                endDate: new Date(),
            });
        });
    </script>
}
