@using Microsoft.AspNetCore.Http
@model Payments.Mvc.Models.InvoiceViewModels.InvoiceListViewModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Invoices";

    var scheme = HttpContextAccessor.HttpContext.Request.Scheme;
}

@section AdditionalStyles
{
    @Html.Partial("_DataTableStylePartial")
}

<div class="card-style">
    <div class="card-header-primary card-bot-border">
        <div class="card-head d-flex justify-content-between align-items-start">
            <h2>@ViewBag.Title</h2>
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-fw fa-plus-square"></i> Create New Invoice</a>
        </div>
    </div>
    
    <div class="card-content card-bot-border">
        <div class="d-flex justify-content-between">
            <h3 class="">Filters</h3>
            <button class="btn-plain" type="button" data-toggle="collapse" data-target="#invoiceFilter"><i class="fa fa-fw fa-compress"></i></button>
        </div>
        <div id="invoiceFilter" class="collapse">
            <partial name="_Filter" model="@Model.Filter" />
        </div>
    </div>

    <div class="card-content">
        <table id="Invoices" class="table table-hover">
            <thead>
            <tr>
                <th>Invoice Number</th>
                <th></th>
                <th>Customer</th>
                <th>Amount</th>
                <th>Sent At</th>
                <th>Created</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var invoice in Model.Invoices)
            {
                <tr data-id="@invoice.Id">
                    <td class="invoices-id-col">
                        @invoice.Id
                    </td>
                    <td class="text-center invoices-status-col">
                        <span class="badge" data-level="@invoice.Status">@invoice.Status</span>
                    </td>
                    <td class="invoices-customer-col">
                        @invoice.CustomerEmail
                    </td>
                    <td class="text-right" data-sort="@invoice.Total">
                        $@invoice.Total.ToString("F2")
                    </td>
                    <td data-sort="@(invoice.SentAt?.Ticks ?? 0)">
                        @(invoice.SentAt.HasValue ? invoice.SentAt.Value.ToString("d") : "")
                    </td>
                    <td data-sort="@invoice.CreatedAt.Ticks">
                        @invoice.CreatedAt.ToString("d")
                    </td>
                    <td><a asp-controller="Payments" asp-action="Preview" asp-route-id="@invoice.Id">Preview</a></td>
                    <td class="invoices-edit-btn-col text-center">
                        @if (invoice.Status == Invoice.StatusCodes.Paid)
                        {
                            <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-primary">View</a>

                        }
                        else if (!invoice.Sent)
                        {
                            <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-primary">Edit</a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editLockedInvoiceModal" data-id="@invoice.Id">Edit</a>
                            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#getShareLinkModal" data-link-id="@invoice.LinkId">Share</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
    
<div class="modal fade" id="editLockedInvoiceModal" tabindex="-1" role="dialog" aria-labelledby="editLockedInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLockedInvoiceModalLabel">Edit Invoice?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" id="unlockInvoiceForm">
                    <div class="alert alert-danger" role="alert">
                        Warning! You are about to edit an invoice that has already been sent!
                    </div>
                    <p>
                        Continuing will prevent your customer from paying this invoice unil you send it again!
                    </p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="unlockInvoiceFormSubmit" class="btn btn-primary">Unlock Invoice</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="getShareLinkModal" tabindex="-1" role="dialog" aria-labelledby="getShareLinkModalLabel" areia-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="getShareLinkModalLabel">Share Invoice</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Share Link
                <input type="text" id="shareLinkModalInput" class="form-control" readonly />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    @Html.Partial("_DataTableScriptsPartial")

    <script type="text/javascript">
        $(function() {
            $("#Invoices").DataTable({
                order: [[ 0, 'asc' ]],
                columnDefs: [
                    { orderable: false, targets: -1 },
                ],
            });
        });

        var detailsUrl = "@(Url.Action("Details"))";
        $("#Invoices tr").on("click",
            ".invoices-id-col, .invoices-status-col, .invoices-customer-col",
            function(event) {
                var $row = $(event.delegateTarget);
                var id = $row.attr("data-id");
                window.location = detailsUrl + "/" + id;
            });

        var unlockUrl = "@Url.Action("Unlock")";
        $('#editLockedInvoiceModal').on('show.bs.modal',
            function(event) {
                var $button = $(event.relatedTarget);
                var id = $button.data('id');

                var modal = $(this);
                modal.find('#unlockInvoiceForm').attr("action", unlockUrl + '/' + id);
            });

        $('#unlockInvoiceFormSubmit').click(function() {
            $('#unlockInvoiceForm').submit();
        });

        var shareLinkBaseUrl = "@Url.RouteUrl("pay-invoice", new { id = "XXXXXX" }, scheme)";
        $('#getShareLinkModal').on('show.bs.modal',
            function(event) {
                var $button = $(event.relatedTarget);
                var linkId = $button.data('link-id');

                var modal = $(this);
                modal.find('#shareLinkModalInput').val(shareLinkBaseUrl.replace("XXXXXX", linkId));
            })
    </script>
}
