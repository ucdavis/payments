@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Routing
@using Payments.Core.Extensions
@using Payments.Core.Models.History
@using Payments.Mvc.Models.CyberSource
@using Payments.Mvc.Identity
@using Payments.Mvc.Models.Roles
@using static Payments.Core.Domain.Invoice
@model Invoice
@inject IHttpContextAccessor _httpContextAccessor
@inject ApplicationUserManager _applicationUserManager

@{
    var isCreditCard      = Model.Type == InvoiceTypes.CreditCard;
    var invoiceType       = isCreditCard ? "Credit Card" : "Recharge";
    var invoiceIconClass  = isCreditCard ? "fas fa-credit-card" : "fas fa-registered";
    var invoiceIconTitle  = invoiceType;

    ViewBag.Title = $"{invoiceType} Invoice #{Model.GetFormattedId()}";
    Layout = "_Layout";

    var teamSlug = _httpContextAccessor.HttpContext.GetRouteData().Values["team"] as string;
    var scheme = _httpContextAccessor.HttpContext.Request.Scheme;

    var timeline = Model.History.OrderByDescending(h => h.ActionDateTime);

    var successfulPayment = Model.PaymentEvents?.FirstOrDefault(p => p.ProcessorId == Model.PaymentProcessorId);

    var user = await _applicationUserManager.GetUserAsync(User);
    var userPermissions = user.TeamPermissions.Where(p => p.Team.Slug == teamSlug).Select(p => p.Role.Name);

    var anyTaxExempt = Model.Items.Any(i => i.TaxExempt);

    var editableStatusCodes = new List<string>
    {
        Invoice.StatusCodes.Draft,
        Invoice.StatusCodes.Sent,
        Invoice.StatusCodes.PendingApproval,
        Invoice.StatusCodes.Rejected
    };
    
}

@section AdditionalStyles
{
    <style asp-add-nonce="true">
        #emailPreview {
            border: 0 none;
            height: 50vh;
            position: relative;
            width: 100%
        }
        
        .accordion-header {
            margin-bottom: 0;
        }
        
        .accordion-button.history-details {
            min-height: auto;
        }
    </style>
}

<div class="card">
    <div class="card-header card-header-yellow d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h2 class="m-0">
    <i class="@invoiceIconClass me-2" title="@invoiceIconTitle"></i>
    @invoiceType for @Model.CalculatedTotal.ToString("C")
</h2>
            <span class="ms-3 badge @Invoice.StatusCodes.GetBadgeClass(Model.Status)" data-level="@Model.Status">@Model.Status</span>
        </div>

        @if (Model.Status == Invoice.StatusCodes.Draft)
        {
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteDraftModal">
                <i class="far fa-trash-alt"></i>
                Delete draft
            </button>
        }
        else if (!Model.Paid && !Model.Refunded)
        {
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteDraftModal">
                <i class="far fa-trash-alt"></i>
                Delete
            </button>
        }
    </div>
    @if(isCreditCard && Model?.CalculatedTotal > 99999.99m)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Warning!</strong> The max amount the credit card will process is $99,999.99. Please use multiple invoices if a discount will not be used to lower the amount below this.
        </div>
    }
    <div class="card-body card-bot-border">
        @if (editableStatusCodes.Contains(Model.Status) && Model.Status != Invoice.StatusCodes.Rejected)
        {
            @if (Model.Type == InvoiceTypes.Recharge)
            {
                <a asp-controller="Recharge" asp-action="Preview" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    Preview
                </a>
            }
            else
            {
                <a asp-controller="Payments" asp-action="Preview" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    Preview
                </a>
            }

            if (!Model.Sent)
            {
                <a href="#" id="sendInvoiceButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sendInvoiceModal" data-action="send">
                    <i class="far fa-envelope"></i>
                    Send
                </a>
            }
            else
            {
                <a href="#" id="sendInvoiceButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sendInvoiceModal" data-action="resend">
                    <i class="far fa-envelope"></i>
                    Resend
                </a>
            }
            
        }

        @if (Model.Status == Invoice.StatusCodes.Sent)
        {
            var modalTarget = userPermissions.Contains(TeamRole.Codes.FinanceOfficer)
                ? "#markPaidModal"
                : "#markPaidNoPermissionModal";

            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="@modalTarget">
                <i class="far fa-check-square"></i>
                Mark as paid
            </button>
        }
        @if (Model.Type != InvoiceTypes.Recharge && Model.Status == Invoice.StatusCodes.Processing && User.IsInRole(ApplicationRoleCodes.Admin))
        {
            var modalTarget = User.IsInRole(ApplicationRoleCodes.Admin)
                ? "#setBackPaidModal"
                : "#setBackPaidNoPermissionModal";

            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@modalTarget">
                <i class="far fa-check-square"></i>
                Set Back to Paid
            </button>
        }
        @if (Model.Status == Invoice.StatusCodes.Refunding && User.IsInRole(ApplicationRoleCodes.Admin))
        {
            var modalTarget = User.IsInRole(ApplicationRoleCodes.Admin)
                ? "#cancelRefundRequestModal"
                : "#cancelRefundRequestNoPermissionModal";

            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@modalTarget">
                <i class="far fa-check-square"></i>
                Cancel Refund Request
            </button>
        }
    </div>
    <div class="card-body history-timeline">
        @foreach (var action in timeline)
        {
            var actionType = HistoryActionTypes.GetHistoryActionType(action.Type);

            <div class="d-flex history-item">
                <div class="ms-2 mt-1 me-4">
                    <i class="history-icon fa-fw @actionType.IconClass"></i>
                </div>
                <div class="flex-grow-1">
                    <p class="history-action">@action.GetMessage()</p>
                    
                    @if(actionType.ShowDetails && action.GetDetails() != null)
                    {
                        <div class="accordion accordion-flush mt-1" id="accordion-@action.Id">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed py-1 px-0 fs-6 history-details" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@action.Id" aria-expanded="false" aria-controls="collapse-@action.Id">
                                        <small class="text-muted">View details</small>
                                    </button>
                                </h2>
                                <div id="collapse-@action.Id" class="accordion-collapse collapse" data-bs-parent="#accordion-@action.Id">
                                    <div class="accordion-body p-2 pt-1">
                                        @Html.Raw(action.GetDetails())
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(action.Actor))
                    {
                        
                        <span class="history-actor">@action.Actor</span>
                        <br/>
                    }
                    
                    <span class="history-date">@action.ActionDateTime.ToPacificTime().ToString("MMM dd, yyyy @ h:mm tt")</span>
                    @if ((actionType == HistoryActionTypes.RefundRequested || actionType == HistoryActionTypes.MarkPaid || actionType == HistoryActionTypes.RefundCancelled) && !string.IsNullOrWhiteSpace(action.Data))
                    {
                        
                        <span class="text-muted">Reason: @action.Data</span>
                    }
                </div>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Summary</h2>

        <div>
            @if (!string.IsNullOrWhiteSpace(Model.LinkId))
            {
                <a asp-controller="Pdf" asp-action="Invoice" asp-route-id="@Model.LinkId" class="btn btn-primary" download>
                    <i class="fas fa-download"></i>
                    Invoice
                </a>
            }

            @if (Model.Paid)
            {
                <a asp-controller="Pdf" asp-action="Receipt" asp-route-id="@Model.LinkId" class="btn btn-primary" download>
                    <i class="fas fa-download"></i>
                    Receipt
                </a>
            }

            @if (editableStatusCodes.Contains(Model.Status))
            {
                if (!Model.Sent)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="far fa-edit"></i>
                        Edit
                    </a>
                }
                else
                {
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editLockedInvoiceModal">
                        <i class="far fa-edit"></i>
                        Edit
                    </button>
                }
            }
        </div>
    </div>
    <div class="card-body card-bot-border invoice-customer">
        <div class="row mb-0">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-6">@Html.DisplayNameFor(x => x.CustomerName)</dt>
                    <dd class="col-6">
                        @if (!string.IsNullOrWhiteSpace(Model.CustomerName))
                        {
                            <span>@Model.CustomerName</span>
                        }
                        else
                        {
                            <span class="text-muted">None Specified</span>

                        }
                    </dd>

                    <dt class="col-6">@Html.DisplayNameFor(x => x.CustomerCompany)</dt>
                    <dd class="col-6">
                        @if (!string.IsNullOrWhiteSpace(Model.CustomerCompany))
                        {
                            <span>@Model.CustomerCompany</span>
                        }
                        else
                        {
                            <span class="text-muted">None Specified</span>

                        }
                    </dd>

                    <dt class="col-6">@Html.DisplayNameFor(x => x.CustomerEmail)</dt>
                    <dd class="col-6">
                        @if (!string.IsNullOrWhiteSpace(Model.CustomerEmail))
                        {
                            <span>@Model.CustomerEmail</span>
                        }
                        else
                        {
                            <span class="text-muted">None Specified</span>

                        }
                    </dd>

                    <dt class="col-6">@Html.DisplayNameFor(x => x.CustomerAddress)</dt>
                    <dd class="col-6">
                        @if (!string.IsNullOrWhiteSpace(Model.CustomerAddress))
                        {
                            <span>@Model.CustomerAddress</span>
                        }
                        else
                        {
                            <span class="text-muted">None Specified</span>

                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-6">Invoice Number</dt>
                    <dd class="col-6">
                        <span>@Model.GetFormattedId()</span>
                    </dd>

                    <dt class="col-6">Due date</dt>
                    <dd class="col-6">
                        @if (Model.DueDate.HasValue)
                        {
                            <span>@Model.DueDate</span>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
        
    </div>
    <div class="card-body invoice-items p-0 table-responsive">
        <table class="invoice-details-table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>
                        @if (anyTaxExempt)
                        {
                            <text>Tax Exempt</text>
                        }
                    </th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Amount</th>
                </tr>
            </thead> 
            <tbody class="invoice-details-table-items">
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(x => x.Items[i].Description)</td>
                    <td>
                        @if (Model.Items[i].TaxExempt)
                        {
                            <i class="far fa-check-square"></i>
                        }
                    </td>
                    <td>@Html.DisplayFor(x => x.Items[i].Quantity)</td>
                    <td>@Html.DisplayFor(x => x.Items[i].Amount)</td>
                    <td>@Html.DisplayFor(x => x.Items[i].Total)</td>
                </tr>
            }
            </tbody>
            <tbody class="invoice-details-table-subtotals">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Subtotal</td>
                    <td>@Html.DisplayFor(x => x.CalculatedSubtotal)</td>
                </tr>
                @if (Model.CalculatedDiscount > 0 || Model.Coupon != null)
                {

                    // paid invoices don't expire
                    var isExpired = (!Model.Paid && Model.Coupon?.ExpiresAt != null && Model.Coupon.ExpiresAt.Value < DateTime.UtcNow.ToPacificTime().Date);

                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @if (Model.Coupon != null)
                        {
                            <span>@Model.Coupon.Name</span>
                            <br />
                            if (Model.Coupon.DiscountAmount.HasValue)
                            {
                                <small>@Model.Coupon.DiscountAmount.Value.ToString("C") off</small>
                            }
                            if (Model.Coupon.DiscountPercent.HasValue)
                            {
                                <small>@Model.Coupon.DiscountPercent.Value.ToString("P") off</small>
                            }
                        }
                        else
                        {
                            <span>Discount</span>
                        }
                    </td>
                    <td>
                        @if (isExpired)
                        {
                            <span>Expired</span>
                        }
                        else
                        {
                            <span>-$@Model.CalculatedDiscount.ToString("F2")</span>
                        }
                    </td>
                </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Tax (@Html.DisplayFor(x => x.TaxPercent))</td>
                    <td>@Html.DisplayFor(x => x.CalculatedTaxAmount)</td>
                </tr>
                </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Total</td>
                    <td>@Html.DisplayFor(x => x.CalculatedTotal)</td>
                </tr>
            </tfoot>
        </table>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Memo))
    {
        <div class="card-body invoice-memo">
            <h2>Memo</h2>
            <div class="form-group">
                @Html.DisplayFor(x => x.Memo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
    }
</div>

@if (Model.Attachments.Any())
{
    <div class="card">
        <div class="card-header">
            <h2>Attachments</h2>
        </div>
        <div class="card-body invoice-attachments">
            @foreach (var a in Model.Attachments)
            {
                var iconClass = a.GetFileIcon();

                <div class="d-flex justify-content-between align-items-center my-3">
                    <div class="col-9 d-flex align-items-center">
                        <i class="fa-2x me-4 @iconClass"></i>
                        <div class="input-group">
                            <input class="form-control" value="@a.FileName" readonly>
                        </div>
                    </div>

                    <span class="col-2 d-flex justify-content-center">@a.GetSizeText()</span>

                    <div class="col-1 d-flex justify-content-end align-items-center">
                        <a class="btn btn-primary btn-icon" target='_blank' asp-controller="Files" asp-action="GetFile" asp-route-id="@a.Id">
                            <i class="fas fa-download"></i>
                        </a>

                        <button class="btn btn-danger btn-icon">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h2>Details</h2>
    </div>
    <div class="card-body invoice-details">
        <dl class="row">
            <dt class="col-2 text-end">Created</dt>
            <dd class="col-10">
                @Model.CreatedAt.ToPacificTime().ToString("g")
            </dd>
        </dl>
        @if (Model.Sent)
        {
            if (Model.Type == InvoiceTypes.Recharge)
            {
                <dl class="row">
                    <dt class="col-2 text-end">Recharge Pay page</dt>
                    <dd class="col-10">
                        @{
                            var paymentPageHref = Url.RouteUrl("pay-recharge-invoice", new { id = Model.LinkId }, scheme);
                        }
                        <a href="@paymentPageHref">@(paymentPageHref) <i class="fas fa-arrow-right ms-3"></i></a>
                    </dd>
                </dl>
                if(Model.Status == Invoice.StatusCodes.PendingApproval || Model.Status == Invoice.StatusCodes.Approved || Model.Status == Invoice.StatusCodes.Completed)
                {
                    <dl class="row">
                        <dt class="col-2 text-end">Recharge Financial Approval page</dt>
                        <dd class="col-10">
                            @{
                                var approvalPageHref = Url.RouteUrl("approve-recharge-invoice", new { id = Model.LinkId }, scheme);
                            }
                            <a href="@approvalPageHref">@(approvalPageHref) <i class="fas fa-arrow-right ms-3"></i></a>
                        </dd>
                    </dl>
                }
            }
            else 
            { 
                <dl class="row">
                    <dt class="col-2 text-end">Payment page</dt>
                    <dd class="col-10">
                        @{
                            var paymentPageHref = Url.RouteUrl("pay-invoice", new { id = Model.LinkId }, scheme);
                        }
                        <a href="@paymentPageHref">@(paymentPageHref) <i class="fas fa-arrow-right ms-3"></i></a>
                    </dd>
                </dl>
            }
        }
    </div>
</div>

@if (Model.Paid && Model.Type != InvoiceTypes.Recharge)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2>Payment</h2>

            @if (Model.Status == Invoice.StatusCodes.Refunding && userPermissions.Contains(TeamRole.Codes.FinanceOfficer))
            {
                <div>
                    <form asp-controller="Invoices" asp-action="Refund" asp-route-id="@Model.Id">
                        <button class="btn btn-primary">
                            <i class="fas fa-hand-holding-usd"></i>
                            Mark Refunded
                        </button>
                    </form>
                </div>
            }
            else if (!Model.Refunded)
            {
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#refundModal">
                        <i class="fas fa-hand-holding-usd"></i>
                        Request Refund
                    </button>
                </div>
            }
        </div>
            <div class="card-body invoice-payment-details">
            <dl class="row">
                <dt class="col-2 text-end">Amount</dt>
                <dd class="col-10">
                    @if (successfulPayment != null)
                    {
                        <span>$@successfulPayment.Amount</span>
                    }
                    else
                    {
                        <span>Successful Payment not Found (maybe manually marked as paid)</span>
                    }
                </dd>

                <dt class="col-2 text-end">Paid on</dt>
                <dd class="col-10">
                    @Model.PaidAt.ToPacificTime()?.ToString("g")
                </dd>
            </dl>
            @if (successfulPayment != null)
            {
                var cardClass = CyberSourceCardTypes.GetIconClass(successfulPayment.CardType);

                <dl class="row mt-3">
                    
                    @if (!string.IsNullOrWhiteSpace(successfulPayment.CardNumber))
                    {
                        <dt class="col-2 text-end">Card Details</dt>
                        <dd class="col-10">
                            <span class="text-monospace">@CyberSourceCardTypes.FormatCardNumber(successfulPayment.CardNumber, successfulPayment.CardType)</span>
                            <i class="@cardClass"></i>
                        </dd>
                    }

                    <dt class="col-2 text-end">@Html.DisplayNameFor(x => x.PaymentEvents[0].BillingEmail)</dt>
                    <dd class="col-10">
                        @successfulPayment.BillingEmail
                    </dd>
                    

                    <dt class="col-2 text-end">@Html.DisplayNameFor(x => x.PaymentEvents[0].ProcessorId)</dt>
                    <dd class="col-10">
                        @successfulPayment.ProcessorId
                    </dd>
                </dl>
            }
        </div>


        <div>

        </div>
    </div>
}
@if(Model.Type == InvoiceTypes.Recharge)
{
    <div class="card">
        <div class="card-header">
            <h2>Recharge Credit Accounts</h2>
        </div>
        <div class="card-body invoice-details" data-direction="Credit">
            <table class="table" data-direction="Credit">
                <thead>
                    <tr>
                        <th>Financial Segment</th>
                        <th>Notes</th>
                        <th>Amount</th>
                        <th>Percent</th>
                        <th>Valid</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var acct in Model.RechargeAccounts.Where(a => a.Direction == RechargeAccount.CreditDebit.Credit ))
                {
                    <tr data-account-id="@acct.Id" class="recharge-account-row">
                        <td>
                            <a href="https://finjector.ucdavis.edu/details/@acct.FinancialSegmentString" target="_blank" rel="noopener noreferrer">
                                @acct.FinancialSegmentString
                            </a>
                        </td>
                        <td>@acct.Notes</td>
                        <td>@acct.Amount.ToString("C")</td>
                        <td>@acct.Percentage</td>
                        <td>
                            <span class="validity-status" data-account-id="@acct.Id">
                                <i class="fas fa-spinner fa-spin text-secondary"></i>
                            </span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h2>Recharge Debit Accounts</h2>
        </div>
        <div class="card-body invoice-details" data-direction="Debit">
            <table class="table" data-direction="Debit">
                <thead>
                    <tr>
                        <th>Financial Segment</th>
                        <th>Notes</th>
                        <th>Amount</th>
                        <th>Percent</th>
                        <th>Approved</th>
                        <th>Valid</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var acct in Model.RechargeAccounts.Where(a => a.Direction == RechargeAccount.CreditDebit.Debit ))
                {
                    <tr data-account-id="@acct.Id" class="recharge-account-row">
                        <td>
                            <a href="https://finjector.ucdavis.edu/details/@acct.FinancialSegmentString" target="_blank" rel="noopener noreferrer">
                                @acct.FinancialSegmentString
                            </a>
                        </td>
                        <td>@acct.Notes</td>
                        <td>@acct.Amount.ToString("C")</td>
                        <td>@acct.Percentage</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(acct.ApprovedByName))
                            {
                                <span class="text-success" title="@acct.ApprovedByName"><i class="fas fa-check"></i></span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="fas fa-times"></i></span>
                            }
                        </td>
                        <td>
                            <span class="validity-status" data-account-id="@acct.Id">
                                <i class="fas fa-spinner fa-spin text-secondary"></i>
                            </span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
<div class="card">
    <div class="card-header">
        <h2>Account</h2>
    </div>
    <div class="card-body invoice-details">
        <dl class="row">
            <dt class="col-2 text-end">Name</dt>
            <dd class="col-10">
                @Model.Account.Name
            </dd>
            <dt class="col-2 text-end">Description</dt>
            <dd class="col-10">
                @Model.Account.Description
            </dd>
            @if (!string.IsNullOrWhiteSpace(Model.Account.Account))
            {
                <dt class="col-2 text-end">Account</dt>
                <dd class="col-10">
                    @Model.Account.GetAccountString()
                </dd>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Account.FinancialSegmentString))
            {
                <dt class="col-2 text-end">Financial Segment String</dt>
                <dd class="col-10">
                    @Model.Account.FinancialSegmentString
                </dd>
            }
        </dl>
    </div>
</div>
}
<div>
    <a class="btn btn-outline-primary" asp-action="Index"><i class="fas fa-chevron-left"></i>Back</a>
</div>

<div class="modal fade" id="sendInvoiceModal" tabindex="-1" role="dialog" aria-labelledby="sendInvoiceModalLabel" aria-hidden="true">
    <form id="sendInvoiceForm">
        <div class="modal-dialog modal-dialog-centered modal-lg send-invoice-modal, " role="document">
            <div class="modal-content">
